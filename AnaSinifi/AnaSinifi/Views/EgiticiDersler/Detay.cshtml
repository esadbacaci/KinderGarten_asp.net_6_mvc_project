@using EntityLayer.Concrete
@model List<Ders>
@{
    ViewData["Title"] = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- End Bradcaump area -->
<!-- Start Class Details -->
<section class="page-class-details bg--white section-padding--lg">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{
			<div class="col-lg-9">
				<div class="class__quality__desc">
				
					<div class="class__thumb">
						<div class="courses__images">
							<img src="@item.DersImage" alt="class images">
						</div>
					
					</div>
					<div class="class-details-inner">
						<div class="courses__inner">
							<h2>@item.DersAdi</h2>
								<p>@Html.Raw(item.DersAciklama)</p>
						</div>
					</div>
				</div>
			</div>
			}
			<!-- Start Sidebar -->
			<div class="col-lg-3">
				<div class="sidebar__widgets sidebar--right">
			
					<!-- Single Widget -->
					<div class="single__widget Popular__classes">
						<h4>Tüm Derslerimiz</h4>
						<ul>
							@await Component.InvokeAsync("DersMenu")	
						</ul>
					</div>
					<!-- End Widget -->
			
					<!-- Single Widget -->
					<div class="single__widget Social__network">
						<h4>Sosyal Medya Hesaplarımız</h4>
						<ul class="dacre__social__link--2 bg--2 d-flex justify-content-start">
							<li class="facebook"><a target="_blank" href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a></li>
							<li class="twitter"><a target="_blank" href="https://twitter.com/"><i class="fa fa-twitter"></i></a></li>
							<li class="vimeo"><a target="_blank" href="https://www.vimeo.com/"><i class="fa fa-instagram"></i></a></li>
							<li class="pinterest"><a target="_blank" href="https://pinterest.com"><i class="fa fa-youtube"></i></a></li>
						</ul>
					</div>
					<!-- End Widget -->
				</div>
			</div>
			<!-- End Sidebar -->
		</div>
	</div>
</section>
<!-- End Class Details -->
<!-- Start Subscribe Area -->
<section style="background:#1680D6" class="bcare__subscribe subscrive--2">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-sm-12 col-lg-12">
				<div class="subscribe__inner">
					<h2>Mutlu Gelecekler İçin</h2>
					<div class="newsletter__form">
						<div class="input__box">
							<div id="mc_embed_signup">
								<form action="http://devitems.us11.list-manage.com/subscribe/post?u=6bbb9b6f5827bd842d9640c82&amp;id=05d85f18ef" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
									<div id="mc_embed_signup_scroll" class="htc__news__inner">
										
										<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
										<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" tabindex="-1" value=""></div>
										<div class="clearfix subscribe__btn">
									
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>