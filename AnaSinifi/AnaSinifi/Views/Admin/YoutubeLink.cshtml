@using EntityLayer.Concrete
@model List<YtLink>
@{
    ViewData["Title"] = "YoutubeLink";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<span class="danger">Aktif olan link en üstteki linktir</span>
<div class="table-responsive">
    <table class="table table-hover">

        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Link</th>
                <th></th>

            </tr>
        </thead>
        @foreach (var item in Model.OrderByDescending(x => x.YtId))
        {
            <tr>
                <th>@item.YtId</th>
                <th>@item.YTUrl</th>

                <td><a href="/Admin/YoutubeLinkSil/@item.YtId" id="DeleteBtn" onclick="return confirm('Bu Linki Silmek İstediğinize Emin Misiniz ?');" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
</div>

