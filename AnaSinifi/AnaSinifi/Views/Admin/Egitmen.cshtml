@using EntityLayer.Concrete
@model List<Egitmenler>
@{
    ViewData["Title"] = "Egitmen";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="table-responsive">
    <table class="table table-hover">

        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Eğitmen Adı</th>
                <th>Eğitmen Açıklama</th>
                <th>Eğitmen Görsel</th>

                <th></th>
                <th></th>

            </tr>
        </thead>
        @foreach (var item in Model.OrderByDescending(x => x.EgitmenID))
        {
            <tr>
                <th>@item.EgitmenID</th>
                <th>@item.EgitmenAdi</th>
                <th>@item.EgitmenAciklama</th>
                <th><img style="width:5%" src="@item.EgitmenGorsel"> </th>

                <td><a href="/Admin/EgitmenSil/@item.EgitmenID" id="DeleteBtn" onclick="return confirm('Bu Kişiyi Silmek İstediğinize Emin Misiniz ?');" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
</div>

