@using EntityLayer.Concrete
@model List<Ders>
@{
    ViewData["Title"] = "EgiticiDersler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table table-hover">

        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Ders Adı</th>
                <th>Ders Açıklama</th>
                <th>Ders Görsel</th>

                <th></th>
                <th></th>

            </tr>
        </thead>
        @foreach (var item in Model.OrderByDescending(x => x.DersID))
        {
            <tr>
                <th>@item.DersID</th>
                <th>@item.DersAdi</th>
                <th>@Html.Raw(item.DersAciklama)</th>
                <th><img style="width:5%" src="@item.DersImage"> </th>
                
                <td><a href="/Admin/EgiticiDerslerSil/@item.DersID" id="DeleteBtn" onclick="return confirm('Bu Projeyi Silmek İstediğinize Emin Misiniz ?');" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
</div>
