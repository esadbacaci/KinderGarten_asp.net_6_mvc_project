@using EntityLayer.Concrete
@model List<Duyurular>
@{
    ViewData["Title"] = "Duyuru";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table table-hover">

        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Duyuru Başlık</th>
                <th>Ders Mekan</th>
                <th>Ders Tarih</th>

                <th></th>
                <th></th>

            </tr>
        </thead>
        @foreach (var item in Model.OrderByDescending(x => x.DuyuruID))
        {
            <tr>
                <th>@item.DuyuruID</th>
                <th>@item.DuyuruBaslik</th>
                <th>@item.DuyuruMekan</th>
                <th>@item.DuyuruTarih</th>

                <td><a href="/Admin/DuyuruSil/@item.DuyuruID" id="DeleteBtn" onclick="return confirm('Bu Duyuruyu Silmek İstediğinize Emin Misiniz ?');" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
</div>

