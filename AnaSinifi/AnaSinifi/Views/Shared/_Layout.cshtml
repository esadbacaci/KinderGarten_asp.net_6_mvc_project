</head>
<body>
	<div class="wrapper" id="wrapper">

	<header id="header" class="jnr__header header--one clearfix">
	
		<!-- Start Mainmenu Area -->
		<div class="mainmenu__wrapper bg__cat--1 poss-relative header_top_line sticky__header">
			<div class="container">
				<div class="row d-none d-lg-flex">
					<div class="col-sm-4 col-md-6 col-lg-2 order-1 order-lg-1">
						<div class="logo">
							<a href="index.html">
								<img src="~/anasinifi/images/logo/junior.png" alt="logo images">
							</a>
						</div>
					</div>
					<div class="col-sm-4 col-md-2 col-lg-9 order-3 order-lg-2">
						<div class="mainmenu__wrap">
							<nav class="mainmenu__nav">
								<ul class="mainmenu">
									<li class="drop"><a href="/Anasayfa">Ana Sayfa</a></li>
									<li class="drop">
										<a href="#">Kurumsal</a>
										<ul class="dropdown__menu">
											<li><a href="/Hakkimizda">Hakkımızda</a></li>
											<li><a href="/Egitmenlerimiz">Eğitmenlerimiz</a></li>
										</ul>
									</li>
									<li class="drop">
										<a href="#">Derslerimiz</a>
											@await Component.InvokeAsync("DersMenu")
									</li>
									<li class="drop"><a href="/Duyurular">Duyurular</a></li>
									<li class="drop"><a href="/Galeri">Galeri</a></li>
									<li><a href="/Iletisim">İletişim</a></li>
									<li class="drop"><a style="color:orange;" href="/KayitFormu">Kayıt Formu</a></li>
								</ul>
							</nav>
						</div>
					</div>
					<div class="col-lg-1 col-sm-4 col-md-4 order-2 order-lg-3">
					</div>
				</div>
				<!-- Mobile Menu -->
				<div class="mobile-menu d-block d-lg-none">
					<div class="logo">
						<a href="index.html"><img src="~/anasinifi/images/logo/junior.png" alt="logo"></a>
					</div>

				</div>
				<!-- Mobile Menu -->
			</div>
		</div>
		<!-- End Mainmenu Area -->
	</header>
  
            @RenderBody()

	<footer id="footer" class="footer-area footer--2">
		<div class="footer__wrapper bg-image--10 section-padding--lg">
			<div class="container">
				<div class="row">
					<!-- Start Single Widget -->
					<div class="col-lg-3 col-md-6 col-sm-12">
						<div class="footer__widget">
							<div class="ft__logo">
								<a href="index.html">
									<img src="~/anasinifi/images/logo/junior.png" alt="logo images">
								</a>
							</div>
							<div class="ftr__details">
								<p>Lorem ipsum dolor sit cnr adipisicing elit, sed do eiusmod teagna aliqua. Lorem ipsudolor sit cnr adi.</p>
							</div>
							<div class="ftr__address__inner">
								<div class="footer__social__icon">
									<ul class="dacre__social__link--2 d-flex justify-content-start">
										<li class="facebook"><a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a></li>
										<li class="twitter"><a href="https://twitter.com/"><i class="fa fa-twitter"></i></a></li>
										<li class="pinterest"><a href="https://twitter.com/"><i class="fa fa-instagram"></i></a></li>
										<li class="pinterest"><a href="https://twitter.com/"><i class="fa fa-youtube"></i></a></li>
										
									</ul>
