	</div>

	<script src="~/anasinifi/js/vendor/jquery-3.2.1.min.js"></script>
	<script src="~/anasinifi/js/popper.min.js"></script>
	<script src="~/anasinifi/js/bootstrap.min.js"></script>
	<script src="~/anasinifi/js/plugins.js"></script>
	<script src="~/anasinifi/js/active.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
